---
interface Props {
    year: string;
    title: string;
    subtitle: string;
}

const { year, title, subtitle } = Astro.props;
---

<div class="box flex flex-1 flex-col md:flex-row items-top py-8 gap-5">
    <div class="basis-1/3 animate-pulse animate-infinite animate-delay-[2000ms] animate-ease-in-out">
        <p>[ <span class="font-kalnia font-bold">{year}</span> ]</p>
    </div>
    <div class="basis-2/3 w-full">
        <p class="font-semibold uppercase text-lg pb-1">{title}</p>
        <p class="text-sm text-blue-violet">{subtitle}</p>
    </div>
</div>

<style>
    .box {
        border-bottom: 1px solid #000
    }
</style>