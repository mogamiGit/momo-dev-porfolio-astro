---
interface Props {
    synopsis: string;
    description: string;
}

const { synopsis, description} = Astro.props;
---

<div class="flex flex-col md:flex-row justify-between items-center">
    <slot name="picture" />
    <div class="w-full flex flex-col flex-start items-start gap-6 p-10">
        <p class="text-2xl font-semibold">
            {synopsis}
        </p>
        <p>
            {description}
        </p>
        <slot name="check" />
        <slot name="buttons" />
    </div>
</div>
