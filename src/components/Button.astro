---
interface Props {
    textButton: string;
    linkProject: string;
}

const { textButton, linkProject } = Astro.props;
---

<a href={linkProject} target="_blank">
    <button type="button" dir={linkProject} class="gap-3 text-white bg-dark-blue hover:bg-dark-blue/80 focus:ring-2 focus:outline-none focus:ring-[#24292F]/50 font-medium text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#415b69]/30 me-2 mb-2">
        <slot name="icon" />
        {textButton}
    </button>
</a>