---
import Layout from "../layouts/Layout.astro";
import ProjectButton from "../components/ProjectButton.astro";
import ProjectContent from "../components/ProjectContent.astro";
import Check from "../components/Check.astro";
import SquareImage from "../components/SquareImage.astro";
import TitleSection from "../components/TitleSection.astro";
import TitleSymbol from "../components/TitleSymbol.astro";
import ListItem from "../components/ListItem.astro";
import Bullets from "../components/Bullets.astro";
---

<Layout title="Hello there!">
	<main>
		<div id="arrow-to-top" class="fixed bottom-0 right-0 w-full flex justify-center items-center mb-10 hover:animate-bounce duration-1000 opacity-0">
			<a href="#">
				<svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M30 60C46.5685 60 60 46.5685 60 30C60 13.4315 46.5685 0 30 0C13.4315 0 0 13.4315 0 30C0 46.5685 13.4315 60 30 60ZM36.6582 39H41.25L32.7092 19.5H27.3367L18.75 39H23.3418L29.8622 24.0485H30.2296L36.6582 39Z" fill="#FFD121"/>
				</svg>
			</a>
		</div>
		<section
			class="w-full mx-auto flex flex-col-reverse md:flex-row justify-between gap-x-10 items-top">
			<div class="flex justify-center flex-col px-6 xl:px-0 space-y-6 gap-4 lg:max-w-md md:max-w-sm">
				<div class="sm:pt-8">
					<h1 class="text-xl text-blue-violet animate-fade-right animate-once animate-delay-1000 animate-ease-in-out">
						iOS Developer · Digital Designer
					</h1>
					<h2 class="font-kalnia text-6xl animate-fade-down animate-once animate-duration-[600ms]  animate-ease-linear">
						Hi, my name is Mónica Galán
					</h2>
				</div>
				<p>
					iOS Developer with a flair for Design, adept at crafting user-friendly interfaces. Passionate about creating innovative mobile applications and committed to advancing skills in iOS development.
				</p>
			</div>
			<div class="w-full h-auto pl-5 mx-0">
				<img class="w-full" src="images/image-hero.png" alt="" />
			</div>
		</section>
		<section id="sintetic" class="w-full mx-auto flex md:flex-row sm:flex-col justify-center gap-10 px-5 flex-wrap">
			<div class="flex flex-col justify-center items-center gap-1 lg:py-0 md:py-5">
				<p class="text-3xl text-yellow-chick animate-jump-in animation-duration-1000 animate-delay-100">8+</p>
				<p>Years of Experience</p>
			</div>
			<div class="border-r hidden md:block border-gray-300 w-3"></div>
			<div class="flex flex-col justify-center items-center gap-1 md:py-5">
				<p class="text-2xl text-yellow-chick animate-jump-in animation-duration-1000 animate-delay-200">Multidisciplinary</p>
				<p>Profesional profile</p>
			</div>
			<div class="border-r hidden md:block border-gray-300 w-3"></div>
			<div class="flex flex-col justify-center items-center gap-1 md:py-5">
				<p class="text-2xl text-yellow-chick animate-jump-in animation-duration-1000 animate-delay-300">UX / UI</p>
				<p>Design passionate</p>
			</div>
		</section>
		<div class="flex flex-col px-8">
			<section id="projects" class="w-full mx-auto pt-20" data-scroll="seccion1">
				<TitleSection>projects</TitleSection>
				<div
					id="accordion-flush"
					data-accordion="collapse"
					data-active-classes="bg-white dark:bg-gray-900 text-gray-900 dark:text-white"
					data-inactive-classes="text-gray-500 dark:text-gray-400">
					<h2 id="accordion-flush-heading-1">
						<button
							type="button"
							class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3"
							data-accordion-target="#accordion-flush-body-1"
							aria-expanded="false"
							aria-controls="accordion-flush-body-1">
							<ProjectButton
								name="Dungeon Crawl"
								highlight="iOS 17"/>
							<svg
								data-accordion-icon
								class="w-3 h-3 rotate-180 shrink-0 mr-5"
								aria-hidden="true"
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 10 6" >
								<path
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 5 5 1 1 5"></path>
							</svg>
						</button>
					</h2>
					<div
						id="accordion-flush-body-1"
						class="hidden"
						aria-labelledby="accordion-flush-heading-1">
						<div
							class="border-b border-blue-violet dark:border-gray-700">
							<ProjectContent
								synopsis="Data Managemnet App"
								description="Empowers Dungeon Masters (DMs) to effortlessly manage their parties and access crucial Dungeons & Dragons data, streamlining the game experience"
								textButton="Enter the dungeon"
								linkProject="https://github.com/mogamiGit/Dungeon-Crawl">
								<SquareImage
									slot="picture"
									mobileImgUrl="project01-image-mobile.jpg"
									desktopImgUrl="project01-image-desktop.jpg"
									alt="user profile picture"/>
								<div slot="check" class="flex gap-x-5 pb-6 flex-wrap">
									<Check>iOS17 - ScrollView new</Check>
									<Check>SwiftData</Check>
									<Check>Async Await</Check>
								</div>
							</ProjectContent>
						</div>
					</div>
					<h2 id="accordion-flush-heading-2">
						<button
							type="button"
							class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3"
							data-accordion-target="#accordion-flush-body-2"
							aria-expanded="false"
							aria-controls="accordion-flush-body-2">
							<ProjectButton
								name="OhTaku!"
								highlight="iOS 16"/>
							<svg
								data-accordion-icon
								class="w-3 h-3 rotate-180 shrink-0 mr-5"
								aria-hidden="true"
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 10 6" >
								<path
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 5 5 1 1 5"></path>
							</svg>
						</button>
					</h2>
					<div
						id="accordion-flush-body-2"
						class="hidden"
						aria-labelledby="accordion-flush-heading-2">
						<div
							class="border-b border-blue-violet dark:border-gray-700">
							<ProjectContent
								synopsis="Tracker App"
								description="Discover and track your favorite anime. Dive into a vast database of titles, consult detailed information, and effortlessly track your progress with a tap."
								textButton="Embark on an epic Adventure"
								linkProject="https://github.com/mogamiGit/Ohtaku">
								<SquareImage
									slot="picture"
									mobileImgUrl="https://placehold.co/600x400"
									desktopImgUrl="https://placehold.co/500"
									alt="user profile picture"/>
								<div slot="check" class="flex gap-x-5 pb-6 flex-wrap">
									<Check>Lottie animation</Check>
									<Check>Local management</Check>
								</div>
							</ProjectContent>
						</div>
					</div>
				</div>
			</section>
			<section id="experience" class="w-full mx-auto pt-20" data-scroll="seccion2">
				<TitleSection>experience</TitleSection>
				<div class="px-5 pt-8">
					<div class="grid grid-cols-1 gap-14 md:grid-cols-2">
						<div>
							<TitleSymbol>Education</TitleSymbol>
							<ListItem
								year="2023"
								title="APPLE CODING ACADEMY"
								subtitle="Swift Full Stack Bootcamp"
							/>
							<ListItem
								year="2021"
								title="CICE, ESCUELA PROFESIONAL DE NUEVAS TECNOLOGIAS"
								subtitle="App development Master"
							/>
							<ListItem
								year="2018 - 2019"
								title="CICE, ESCUELA PROFESIONAL DE NUEVAS TECNOLOGIAS"
								subtitle="Web design & development course"
							/>
							<ListItem
								year="2011 - 2015"
								title="ESNE"
								subtitle="Graphic and multimedia design degree"
							/>
						</div>
						<div>
							<TitleSymbol>Work</TitleSymbol>
							<ListItem
								year="2019 - today"
								title="CHEIL WORLDWIDE"
								subtitle="Visual & Web Layout designer"
							/>
							<ListItem
								year="2016 - 2019"
								title="8BELTS"
								subtitle="Graphic designer"
							/>
						</div>
					</div>
				</div>
			</section>
			<section id="about" class="w-full mx-auto  pt-20" data-scroll="seccion3">
				<div class="flex flex-col lg:flex-row-reverse gap-10 items-center">
					<img src="images/profile_photo.png" alt="profile image" class="max-w-80">
					<div class="flex flex-col lg:flex-row gap-6">
						<div>
							<TitleSection>about_me</TitleSection>
						</div>
						<p>Hey you! I'm the creative mind behind the keyboard. Constantly on the move and infusing energy into every project.
						<br><br>My mantra is simple: learn, design, develop, have fun, repeat! Because, honestly, why should the process of creating something incredible be boring? I love pushing boundaries, exploring new trends, and finding the perfect balance between functionality and style.
						<br><br>Let's turn your digital dreams into vibrant realities together!
						</p>
					</div>
				</div>
				<div class="px-5 pt-6 flex flex-col gap-12">
					<div class="mt-10">
						<TitleSymbol>Hard skills</TitleSymbol>
						<div class="flex gap-x-10 gap-y-4 flex-wrap mt-6">
							<Bullets 
								title="Languages"
								description="Swift">
							</Bullets>
							<Bullets 
								title="Frameworks and SDKs"
								description="SwiftUI · UIKit · SwiftData">
							</Bullets>
							<Bullets 
								title="Patterns"
								description="MVVM · MVC · Viper">
							</Bullets>
							<Bullets 
								title="Methodologies"
								description="Design Thinking · Atomic Design · Mobile First · Agile">
							</Bullets>
							<Bullets 
								title="Other skills"
								description="RESTful APIs · Postman · Figma">
							</Bullets>
						</div>
					</div>
					<div>
						<TitleSymbol>Soft skills</TitleSymbol>
						<p class="text-xl mt-4">Constantly changing · Self-taught · Problem solving · Teamwork</p>
					</div>
					<picture>
						
					</picture>
				</div>
			</section>
		</div>
	</main>
	<footer class="border-t px-6">
		<div class="w-full mx-auto py-10 text-sm opacity-80">
			<p>&#169; 2024 Design by Mónica Galán</p>
		</div>
	</footer>
</Layout>

<style is:global>
	@font-face {
    font-family: 'Hubot Sans';
    src:
        url('/fonts/Hubot-Sans.woff2') format('woff2 supports variations'),
        url('/fonts/Hubot-Sans.woff2') format('woff2-variations');
    font-weight: 200 900;
    font-stretch: 75% 125%;
	}

	html {
		font-family: 'Hubot Sans', system-ui, sans-serif;
		scroll-behavior: smooth;
		animation: ease-in;
		animation-duration: 1000ms;
	}

	html.dark {
		background-color: #03001C;
		color: #fff;
	}

	.dark .nav-links a {
		color: #fff;
	}

	.dark header {
		background-color: black;
	}

	body {
		display: flex;
		justify-content: center;
		flex-direction: column;
		font-size: medium;
	}

	section {
		max-width: 1240px;
		padding-bottom: 60px;
	}
</style>

<script>
    const myDiv = document.getElementById('arrow-to-top');

window.addEventListener('scroll', () => {
  if (window.scrollY === 0) {
    myDiv.classList.add('opacity-0');
    myDiv.classList.remove('opacity-100');
  } else {
    myDiv.classList.remove('opacity-0'); 
    myDiv.classList.add('opacity-100');
  }
});
</script>
