<style is:global>
	@font-face {
    font-family: 'Hubot Sans';
    src:
        url('/fonts/Hubot-Sans.woff2') format('woff2 supports variations'),
        url('/fonts/Hubot-Sans.woff2') format('woff2-variations');
    font-weight: 200 900;
    font-stretch: 75% 125%;
	}

	html {
		font-family: 'Hubot Sans', system-ui, sans-serif;
		scroll-behavior: smooth;
		animation: ease-in;
		animation-duration: 1000ms;
	}

	html.dark {
		background-color: #03001C;
		color: #fff;
	}

	.dark .nav-links a {
		color: #fff;
	}

	.dark header {
		background-image: linear-gradient(to bottom, rgba(3, 0, 28, 1), transparent);
		box-shadow: 0 2px 40px rgba(0, 0, 0, 0.8);
	}

	header {
		background-image: linear-gradient(to bottom, #fff, transparent);
		box-shadow: 0 2px 40px rgba(0, 0, 0, 0.1);
	}

	body {
		display: flex;
		justify-content: center;
		flex-direction: column;
		font-size: medium;
	}

	section {
		max-width: 1240px;
		padding-bottom: 60px;
	}

	@media (max-width: 599px) {
		header {
			background: rgba(255, 255, 255, 0.7);
		}
		.dark header {
		 	background: rgba(3, 0, 28, 0.8);
		}
	}
</style>

<script>
	const myDiv = document.getElementById('arrow-to-top');
	const header = document.getElementById('header');

	window.addEventListener('scroll', () => {
	if (window.scrollY === 0) {
		myDiv.classList.add('opacity-0');
		myDiv.classList.remove('opacity-100');
	} else {
		myDiv.classList.remove('opacity-0'); 
		myDiv.classList.add('opacity-100');
	}
	});

  window.addEventListener('scroll', () => {
    if (window.scrollY === 0) {
      header.classList.remove('bg-opacity-80');
    } else {
      header.classList.add('bg-opacity-80');
    }
  });
</script>
