---
import Header from './Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Kalnia:wght@500;600&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
</html>
<style is:global>
	@font-face {
		font-family: 'Hubot Sans';
		src:
			url('/fonts/Hubot-Sans.woff2') format('woff2 supports variations'),
			url('/fonts/Hubot-Sans.woff2') format('woff2-variations');
		font-weight: 200 900;
		font-stretch: 75% 125%;
	}

	:root {
		color-scheme: light dark;
	}

	html {
		font-family: 'Hubot Sans', system-ui, sans-serif;
	}

	body {
		display: flex;
		justify-content: center;
		flex-direction: column;
		font-size: medium;
	}

	section {
		max-width: 1240px;
		padding-bottom: 60px;
	}

</style>
